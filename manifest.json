{
  "manifest_version": 3,
  "name": "Words Saver",
  "description": "Extension for saving words on the internet to learn vocabularies.",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
